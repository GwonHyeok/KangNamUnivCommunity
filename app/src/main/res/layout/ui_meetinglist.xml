<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/meeting_people_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_meeting_male"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/meeting_people_num"
        android:layout_toRightOf="@+id/meeting_people_num"
        android:background="@drawable/bg_box_meeting"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자 4명"
                android:textColor="#616161"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/meeting_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건국대 인미공"
                android:textColor="#bdbdbd" />
        </LinearLayout>

        <TextView
            android:id="@+id/meeting_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/meeting_time"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/meeting_time"
            android:layout_toStartOf="@+id/meeting_time"
            android:text="[8]"
            android:textColor="#78908c" />

        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2014.10.17" />
    </RelativeLayout>
</RelativeLayout>