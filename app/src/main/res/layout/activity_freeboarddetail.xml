<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeboard_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/board_white_main_color" />

    <com.yscn.knucommunity.CustomView.NotifiableScrollView
        android:id="@+id/freeboard_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/freeboard_replayview"
        android:layout_below="@+id/toolbar"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/freeboard_detail_content_dataview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/freeboard_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="#424242"
                android:textSize="14sp" />
        </LinearLayout>
    </com.yscn.knucommunity.CustomView.NotifiableScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/freeboard_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="14dp"
            android:background="@android:color/transparent"
            android:paddingRight="12dp"
            android:textColor="#FF424242"
            android:textSize="21sp" />

        <RelativeLayout
            android:id="@+id/freeboard_detail_profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.yscn.knucommunity.CustomView.CircleImageView
                android:id="@+id/freeboard_detail_profile"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/freeboard_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@id/freeboard_detail_profile"
                android:layout_toRightOf="@id/freeboard_detail_profile"
                android:background="@android:color/transparent"
                android:textColor="#FF414141"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/freeboard_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:textColor="#757575"
                    android:textSize="13sp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/freeboard_replayview"
        android:background="#FFBBBBBB" />

    <RelativeLayout
        android:id="@+id/freeboard_replayview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ic_post_reply" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="댓글"
            android:textColor="#FFBBBBBB"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>