<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/faq_main_color" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/toolbar"
        android:background="#E9E9E9"
        android:gravity="center_vertical"
        android:text="질문을 하기 전에 같은 내용의 질문이 있는지 찾아보고 하세요."
        android:textColor="#FF757575"
        android:textSize="13sp"
        android:paddingLeft="14dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/board_list_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView">

        <com.yscn.knucommunity.CustomView.NotifyFooterScrollView
            android:id="@+id/faq_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView"
            android:background="#f8f8f8"
            android:divider="#d7d7d7"
            android:dividerHeight="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </com.yscn.knucommunity.CustomView.NotifyFooterScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>