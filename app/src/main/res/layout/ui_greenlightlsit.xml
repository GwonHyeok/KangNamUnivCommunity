<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/greenlight_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/greenlight_list_reply"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:textColor="#FF343434"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/greenlight_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:textColor="#757575"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/greenlight_list_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/greenlight_list_time"
        android:layout_toStartOf="@id/greenlight_list_time"
        android:textSize="16sp"
        android:textColor="#8f8f8f"/>

    <include
        layout="@layout/ui_boardlist_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>