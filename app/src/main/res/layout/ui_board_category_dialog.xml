<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_box_custom_dialog"
    android:minWidth="308dp"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="4dp"
    android:paddingTop="18dp">


    <TextView
        android:id="@+id/welfaredialog_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리를 선택해주세요"
        android:textColor="#292929"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/board_category_dialog_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/board_category_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_default_select_item_effect"
            android:padding="12dp"
            android:text="취소"
            android:textColor="#4285f4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/board_category_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_default_select_item_effect"
            android:padding="12dp"
            android:text="확인"
            android:textColor="#4285f4"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>