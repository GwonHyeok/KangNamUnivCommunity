<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="4dp"
    android:background="@drawable/bg_bookcard"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/library_search_book_thumbnail"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/library_search_book_thumbnail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/library_search_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사막일기 : 머무름·기다림·비움"
            android:textColor="#424242" />

        <TextView
            android:id="@+id/library_search_book_callno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="858-P211p최"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/library_search_book_author_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보누스, 2014"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/library_search_book_holding_lendtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제1서고 / 대출가능"
            android:textColor="#616161" />
    </LinearLayout>
</RelativeLayout>