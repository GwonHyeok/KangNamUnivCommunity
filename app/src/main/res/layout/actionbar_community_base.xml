<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_commulity_base_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/actionbar_community_base_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_nav_menu_white" />

    <TextView
        android:id="@+id/actionbar_community_base_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="23sp"
        android:text="제목"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/actionbar_community_base_image"
        android:layout_toEndOf="@+id/actionbar_community_base_image"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:id="@+id/actionbar_community_first_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/actionbar_community_second_image"
        android:layout_toStartOf="@+id/actionbar_community_second_image"
        android:padding="10dp"
        android:src="@drawable/ic_nav_search" />

    <ImageView
        android:id="@+id/actionbar_community_second_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_nav_write_white" />

</RelativeLayout>