<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="FreeboardListTheme" parent="NoActionBarTheme" />

    <style name="FaqboardListTheme" parent="NoActionBarTheme" />

    <style name="GreenLightListTheme" parent="NoActionBarTheme" />

    <style name="DeliveryFoodListTheme" parent="NoActionBarTheme" />

    <style name="StudentInfoNotificationTheme" parent="NoActionBarTheme"/>

    <style name="SettingTheme" parent="NoActionBarTheme" />

    <style name="BeatTheme" parent="NoActionBarTheme" />

    <style name="CommunityTheme" parent="NoActionBarTheme" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="MarketListTheme" parent="NoActionBarTheme" />

    <style name="StudentCouncilTheme" parent="NoActionBarTheme" />

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#6b6b6b</item>
    </style>

</resources>
