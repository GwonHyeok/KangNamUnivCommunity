<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/greenlight_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="안녕하세요"
        android:textColor="#FF343434"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/greenlight_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:text="2014.10.16"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/greenlight_list_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/greenlight_list_time"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/greenlight_list_time"
        android:layout_toStartOf="@id/greenlight_list_time"
        android:text="[17]"
        android:textSize="16sp"/>
</RelativeLayout>