<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/bg_bookcard"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/library_search_book_thumbnail"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_profile"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/library_search_book_thumbnail"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/library_search_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사막일기 : 머무름·기다림·비움"
            android:textColor="#424242" />

        <TextView
            android:id="@+id/library_search_book_callno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="858-P211p최"
            android:textColor="#757575"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/library_search_book_author_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보누스, 2014"
            android:textColor="#757575"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/library_search_book_holding_lendtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제1서고 / 대출가능"
            android:textColor="#616161"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</RelativeLayout>