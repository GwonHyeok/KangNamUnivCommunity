<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_taxi_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="@drawable/bg_sharetaxi"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="택시합승"
                android:textColor="@android:color/white"
                android:textSize="23sp" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/share_taxi_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1월 2015년"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="20dp"
                    android:src="@drawable/ic_arrow_back" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/share_taxi_viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/imageView12"
                    android:layout_toRightOf="@+id/imageView11"
                    android:layout_toStartOf="@+id/imageView12"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    android:src="@drawable/ic_arrow_next" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.yscn.knucommunity.CustomView.NotifyFooterScrollView
        android:id="@+id/share_taxi_scrollview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/share_taxi_data_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.yscn.knucommunity.CustomView.NotifyFooterScrollView>
</LinearLayout>